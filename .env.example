# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-here-change-in-production
DEBUG=True

# Database Configuration
# Local MongoDB
MONGO_URI=mongodb://localhost:27017/followup_db
# OR MongoDB Atlas
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/followup_db

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=900  # 15 minutes in seconds
JWT_REFRESH_TOKEN_EXPIRES=604800  # 7 days in seconds

# Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.5-flash

# CORS Configuration
# Comma-separated list of allowed frontend origins for CORS
# Example: FRONTEND_ORIGINS=http://localhost:3000,https://v0-extractedfrontend.vercel.app
FRONTEND_ORIGINS=http://localhost:3000,https://v0-extractedfrontend.vercel.app

# Email Configuration (optional - for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_STORAGE_URL=redis://localhost:6379  # Optional - uses in-memory by default

# Logging Level
LOG_LEVEL=INFO
